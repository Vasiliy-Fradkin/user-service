<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/hibernate.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%logger{1}] %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>
